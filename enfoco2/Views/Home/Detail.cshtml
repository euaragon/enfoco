@model enfoco2.Models.NoticeDto

@{
    ViewData["Title"] = Model.Title;
}

@inject enfoco2.Services.NoticeService NoticeService
@{
    var notice = await NoticeService.GetNoticeByIdAsync(Model.Id);
}



<div class="notice-detail-container p-5">


    <h5 class="text-naranja notice-detail-issue">@notice.Issue</h5>
    <h2 class="notice-detail-title">@notice.Title</h2>
    <h3 class="notice-detail-subtitle">@notice.Subtitle</h3>

    <img class="img-fluid img-thumbnail w-100" src="@notice.Img" alt="noticia">

    <div class="content-notice mt-4">
        <p class="notice-detail-text">@Html.Raw(notice.Text)</p>
    </div>

    <a href="javascript:history.back()" class="btn volver"><img class=" me-2" width="20" height="20" src="https://img.icons8.com/ios/50/back--v1.png" alt="back--v1" />VOLVER</a>
</div>
