@model enfoco2.Models.Notice

@{
    ViewData["Title"] = "Detalle de Noticia";
}

<div class="notice-detail-container">
    @if (Model != null)
    {
            <h2>@Model.Title</h2>
            <div class="img-notice-container">
                <img class="img-fluid img-thumbnail" src="@Model.Img" alt="noticia">
            </div>
            <p>@Model.Text</p>
            <!-- Otros detalles de la noticia, como autor, fecha, etc. -->
    }
    else
    {
            <p>No se encontró la noticia.</p>
    }
</div>
